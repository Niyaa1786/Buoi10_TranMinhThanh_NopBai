@model Buoi10_TranMinhThanh.Models.Student

@{
    Layout = null;
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit - Buoi10_TranMinhThanh</title>

    <!-- Fonts & Bootstrap -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(to right, #fefefe, #f3e9dc);
            color: #5e4c3c;
            padding-bottom: 30px;
        }

        .form-group label {
            font-weight: 500;
            color: #6e5e4f;
        }

        .form-control {
            border-radius: 10px;
            border: 1px solid #c7b9a7;
        }

        .btn-gradient {
            background-image: linear-gradient(to right, #b48b6f, #d2b89f);
            border: none;
            border-radius: 50px;
            color: white;
            padding: 10px 24px;
            font-weight: 500;
        }

            .btn-gradient:hover {
                background-image: linear-gradient(to right, #a3775b, #c1a087);
            }

        .btn-outline-brown {
            border-radius: 50px;
            border: 1px solid #8d6e63;
            color: #8d6e63;
            padding: 8px 20px;
            font-weight: 500;
            text-decoration: none;
        }

            .btn-outline-brown:hover {
                background-color: #8d6e63;
                color: white;
                text-decoration: none;
            }

        .text-danger {
            font-size: 0.9rem;
        }

        h1, h4 {
            color: #795548;
        }

        .form-wrapper {
            background: #fefefe;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.06);
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center fw-bold mb-4">✏️ Edit Student</h1>

        <div class="row justify-content-center">
            <div class="col-md-6 form-wrapper">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="StudentID" />

                    <div class="form-group mb-3">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="BirthDate" class="control-label"></label>
                        <input asp-for="BirthDate" class="form-control" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Major" class="control-label"></label>
                        <input asp-for="Major" class="form-control" />
                        <span asp-validation-for="Major" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="💾 Save" class="btn-gradient" />
                    </div>
                </form>

                <div class="text-center mt-4">
                    <a asp-action="Index" class="btn-outline-brown">← Back to List</a>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
