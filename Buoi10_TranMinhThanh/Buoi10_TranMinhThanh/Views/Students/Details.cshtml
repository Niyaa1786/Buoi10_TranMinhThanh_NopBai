@model Buoi10_TranMinhThanh.Models.Student

@{
    Layout = null;
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Details - Buoi10_TranMinhThanh</title>

    <!-- Fonts & Bootstrap -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(to right, #fefefe, #f3e9dc);
            color: #5e4c3c;
            padding-bottom: 30px;
        }

        .card {
            border: none;
            border-radius: 16px;
            background: #fefefe;
            box-shadow: 0 4px 10px rgba(0,0,0,0.08);
            padding: 30px;
        }

        .card-title {
            font-size: 1.6rem;
            font-weight: bold;
            color: #795548;
        }

        .dt {
            font-weight: 600;
            color: #7c5c49;
        }

        .dd {
            color: #5c4b3a;
        }

        .btn-gradient, .btn-outline-brown {
            border-radius: 50px;
            padding: 8px 20px;
            font-weight: 500;
            text-decoration: none;
            display: inline-block;
        }

        .btn-gradient {
            background-image: linear-gradient(to right, #b48b6f, #d2b89f);
            color: white;
            border: none;
        }

            .btn-gradient:hover {
                background-image: linear-gradient(to right, #a3775b, #c1a087);
            }

        .btn-outline-brown {
            border: 1px solid #8d6e63;
            color: #8d6e63;
        }

            .btn-outline-brown:hover {
                background-color: #8d6e63;
                color: white;
            }

        h1 {
            color: #795548;
        }

        .footer {
            background-color: #efe8dd;
            padding: 20px 0;
            text-align: center;
            font-size: 0.9rem;
            margin-top: 40px;
            color: #5c4b3a;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center fw-bold mb-4">📖 Student Details</h1>

        <div class="card mx-auto" style="max-width: 600px;">
            <h5 class="card-title mb-4">👤 Information</h5>
            <dl class="row">
                <dt class="col-sm-4 dt">@Html.DisplayNameFor(model => model.FullName)</dt>
                <dd class="col-sm-8 dd">@Html.DisplayFor(model => model.FullName)</dd>

                <dt class="col-sm-4 dt">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-8 dd">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-4 dt">@Html.DisplayNameFor(model => model.BirthDate)</dt>
                <dd class="col-sm-8 dd">@Html.DisplayFor(model => model.BirthDate)</dd>

                <dt class="col-sm-4 dt">@Html.DisplayNameFor(model => model.Major)</dt>
                <dd class="col-sm-8 dd">@Html.DisplayFor(model => model.Major)</dd>
            </dl>

            <div class="text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.StudentID" class="btn-gradient me-2">✏️ Edit</a>
                <a asp-action="Index" class="btn-outline-brown">← Back to List</a>
            </div>
        </div>
    </div>

    <footer class="footer">
        &copy; 2025 - Buoi10_TranMinhThanh. Details page powered by pastel vibes ✨
    </footer>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
