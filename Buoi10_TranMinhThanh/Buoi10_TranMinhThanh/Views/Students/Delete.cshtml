@model Buoi10_TranMinhThanh.Models.Student

@{
    Layout = null;
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delete Student - Buoi10_TranMinhThanh</title>

    <!-- Fonts & Bootstrap -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(to right, #fefefe, #f3e9dc);
            color: #5e4c3c;
            padding-bottom: 30px;
        }

        h1 {
            color: #795548;
        }

        h4 {
            font-weight: 600;
            color: #7c5c49;
        }

        .card {
            border-radius: 16px;
            background: #fffdf9;
            box-shadow: 0 4px 10px rgba(0,0,0,0.08);
            padding: 30px;
        }

        dt {
            font-weight: 500;
            color: #6e5e4f;
        }

        dd {
            color: #5c4b3a;
        }

        .btn-gradient-danger {
            background-image: linear-gradient(to right, #c94f4f, #e98676);
            color: white;
            border: none;
            border-radius: 50px;
            padding: 10px 24px;
            font-weight: 500;
        }

            .btn-gradient-danger:hover {
                background-image: linear-gradient(to right, #b93b3b, #d76f5e);
            }

        .btn-outline-brown {
            border-radius: 50px;
            border: 1px solid #8d6e63;
            color: #8d6e63;
            padding: 8px 20px;
            font-weight: 500;
            text-decoration: none;
        }

            .btn-outline-brown:hover {
                background-color: #8d6e63;
                color: white;
                text-decoration: none;
            }

        .footer {
            background-color: #efe8dd;
            padding: 20px 0;
            text-align: center;
            font-size: 0.9rem;
            margin-top: 40px;
            color: #5c4b3a;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center fw-bold mb-4">🗑️ Delete Student</h1>

        <div class="card mx-auto" style="max-width: 700px;">
            <h4 class="mb-3 text-center">Are you sure you want to delete this student?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FullName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.BirthDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.BirthDate)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Major)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Major)</dd>
            </dl>

            <form asp-action="Delete" class="text-center mt-4">
                <input type="hidden" asp-for="StudentID" />
                <input type="submit" value="❌ Delete" class="btn-gradient-danger me-2" />
                <a asp-action="Index" class="btn-outline-brown">← Back to List</a>
            </form>
        </div>
    </div>

    <footer class="footer">
        &copy; 2025 - Buoi10_TranMinhThanh. Delete page with peace and grace 🌸
    </footer>
</body>
</html>
